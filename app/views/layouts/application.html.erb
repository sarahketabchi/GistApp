<!DOCTYPE html>
<html>
<head>
  <title>GistApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, message| %>
  <div class="flash"><%= "#{key.upcase}: #{message}" %></div>
<% end %>

<%= render :partial => 'layouts/header' %>

<%= yield %>

</body>
</html>
